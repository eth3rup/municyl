{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@/*": [
        "client/src/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "client",
    "api",
    "shared"
  ]
}